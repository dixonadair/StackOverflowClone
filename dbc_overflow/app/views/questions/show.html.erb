<p>
  <strong>Title:</strong>
  <%= @question.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @question.content %>
</p>

<h2>Answers</h2>
<% @question.answers.each do |answer| %>
  <p>
    <strong>Answerer:</strong>
    <%= answer.answerer %>
  </p>

  <p>
    <strong>Title:</strong>
    <%= answer.title %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= answer.content %>
  </p>
<% end %>

<%= render 'answers/new' %>

<%= link_to 'Edit', edit_question_path(@question) %>

<%= link_to 'Back', questions_path %>
