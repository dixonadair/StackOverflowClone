<h2>Add an answer:</h2>

<%= form_for([@question, @question.answers.build]) do |f| %>
  <p>
    <%= f.label :answerer %><br>
    <%= f.text_field :answerer %>
  </p>

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
