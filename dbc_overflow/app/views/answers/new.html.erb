<h1>New Answer</h1>

<%= form_for :answer, url: answers_path do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </p>

  <p>
    <%= f.label :answerer %><br>
    <%= f.text_field :answerer %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
